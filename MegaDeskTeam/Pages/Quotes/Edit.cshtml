@page
@model MegaDeskTeam.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quote.ID" />
            <div class="form-group">
                <label asp-for="Quote.customerName" class="control-label"></label>
                <input asp-for="Quote.customerName" class="form-control" />
                <span asp-validation-for="Quote.customerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DateAdded" class="control-label"></label>
                <input asp-for="Quote.DateAdded" class="form-control" />
                <span asp-validation-for="Quote.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Width" class="control-label"></label>
                <input asp-for="Quote.Width" class="form-control" />
                <span asp-validation-for="Quote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Depth" class="control-label"></label>
                <input asp-for="Quote.Depth" class="form-control" />
                <span asp-validation-for="Quote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Material"></label><br>
                <select asp-for="Quote.Material" class="form-control">
                    <option asp-for="Quote.Material" value="Laminate"> Laminate</option>
                    <option asp-for="Quote.Material" value="Oak">Oak</option>
                    <option asp-for="Quote.Material" value="Rosewood">Rosewood</option>
                    <option asp-for="Quote.Material" value="Veneer">Veneer</option>
                    <option asp-for="Quote.Material" value="Pine">Pine</option>
                </select>
                <span asp-validation-for="Quote.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Drawers" class="control-label"></label>
                <input asp-for="Quote.Drawers" class="form-control" />
                <span asp-validation-for="Quote.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.RushDays" class="control-label"></label>
                <input asp-for="Quote.RushDays" class="form-control" />
                <span asp-validation-for="Quote.RushDays" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
